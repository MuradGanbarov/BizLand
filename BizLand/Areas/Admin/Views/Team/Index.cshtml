@using BizLand.Areas.Admin.ViewModels;
@using BizLand.Models;
@model PaginationVM<Team>
@{
    int count = (Model.CurrentPage - 1) * 3;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Table</h4>
            <a class="btn btn-success" asp-action="create" asp-controller="team">Create New Team</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Fullname
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Facebook
                            </th>
                            <th>
                                LinkedIn
                            </th>
                            <th>
                                Twitter
                            </th>
                            <th>
                                Instagram
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Team team in Model.Items)
                        {
                            count++;
                                <tr>
                                    <td>
                                    @count;
                                    </td>
                                    <td>
                                        <img src="~/assets/img/team/@team.ImageURL"/>
                                    </td>
                                    <td>
                                        @team.FullName
                                    </td>
                                    <td>
                                        @team.Position.Name
                                    </td>
                                    <td>
                                        @team.FaceLink
                                    </td>
                                    <td>
                                        @team.LinkedInLink
                                    </td>
                                    <td>
                                        @team.TwitLink
                                    </td>
                                    <td>
                                        @team.InstaLink
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="update" asp-controller="team" asp-route-id="@team.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a class="btn btn-danger" asp-action="delete" asp-controller="team" asp-route-id="@team.Id"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>