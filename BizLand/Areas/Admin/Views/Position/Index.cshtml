@using BizLand.Areas.Admin.ViewModels;
@using BizLand.Models;
@model PaginationVM<Position>
@{
    int count = (Model.CurrentPage - 1) * 3;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Position Table</h4>
            <a class="btn btn-success" asp-action="create" asp-controller="position">Create New Position</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                EmployeeCount's
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Position position in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count;
                                </td>
                                <td>
                                    @position.Name
                                </td>
                                <td>
                                    @position.Teams.Count()
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-controller="position" asp-route-id="@position.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a class="btn btn-danger" asp-action="delete" asp-controller="position" asp-route-id="@position.Id"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage<=0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-2)" asp-action="Index" asp-controller="position">Previous</a></li>
                        @for (int i = 1; i < Model.TotalPage; i++)
                        {
                            <li class="page-item @(i<=Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i-1)" asp-action="Index" asp-controller="position">@i</a></li>

                        }
                        <li class="page-item @(Model.CurrentPage==Model.TotalPage?"disabled":"")"><a class="page-link" asp-route-page="@Model.CurrentPage" asp-action="Index" asp-controller="position">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>