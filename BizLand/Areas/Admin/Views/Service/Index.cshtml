@using BizLand.Areas.Admin.ViewModels;
@using BizLand.Models;
@model PaginationVM<Service>
@{
    int count = (Model.CurrentPage - 1) * 3;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Table</h4>
            <a class="btn btn-success" asp-action="create" asp-controller="service">Create New Service</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Icon
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Service service in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count;
                                </td>
                                <td>
                                    @service.Icon
                                </td>
                                <td>
                                    @service.Name
                                </td>
                                <td>
                                    @service.Description
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-controller="service" asp-route-id="@service.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a class="btn btn-danger" asp-action="delete" asp-controller="service" asp-route-id="@service.Id"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>